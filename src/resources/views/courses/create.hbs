<div class="mt-4">
  <h3>Create Courses</h3>
  <form method="POST" action="/courses/store">
    <div class="form-group">
      <label for="name" class="form-label">Name of course</label>
      <input
        type="text"
        class="form-control"
        id="name"
        aria-describedby="emailHelp"
        name="name"
      />
    </div>
    <div class="form-group">
      <label for="description" class="form-label">Description</label>
      <input
        type="text"
        class="form-control"
        id="description"
        aria-describedby="emailHelp"
        name="description"
      />
    </div>
    <div class="form-group">
      <label for="videoId" class="form-label">Video ID</label>
      <input
        type="text"
        class="form-control"
        id="videoId"
        aria-describedby="emailHelp"
        name="videoId"
      />
    </div>
    <div class="form-group">
      <label for="level" class="form-label">Level</label>
      <input
        type="text"
        class="form-control"
        id="level"
        aria-describedby="emailHelp"
        name="level"
      />
    </div>

    <button type="submit" class="btn btn-primary">Add course</button>
  </form>
</div>