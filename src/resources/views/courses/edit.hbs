<div class="mt-4">
  <h3>Update Course</h3>

  <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
    <div class="form-group">
      <label for="name" class="form-label">Name of course</label>
      <input
        type="text"
        class="form-control"
        id="name"
        aria-describedby="emailHelp"
        name="name"
        value="{{course.name}}"
      />
    </div>
    <div class="form-group">
      <label for="description" class="form-label">Description</label>
      <textarea
        type="text"
        class="form-control"
        id="description"
        aria-describedby="emailHelp"
        name="description"
      >
{{course.description}}</textarea
      >
    </div>
    <div class="form-group">
      <label for="videoId" class="form-label">Video ID</label>
      <input
        type="text"
        class="form-control"
        id="videoId"
        aria-describedby="emailHelp"
        name="videoId"
        value="{{course.videoId}}"
      />
    </div>
    <div class="form-group">
      <label for="level" class="form-label">Level</label>
      <input
        type="text"
        class="form-control"
        id="level"
        aria-describedby="emailHelp"
        name="level"
        value="{{course.level}}"
      />
    </div>

    <button type="submit" class="mt-4 btn btn-primary">Save</button>
  </form>
</div>
